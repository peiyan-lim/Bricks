@model BricksMeatballs.Models.FinancialModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Financial Calculator</h1>

<div>
    <hr />
    <h4>Calculated Results</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            TDSR Limit
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.TDSRLimit())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            MSR Limit
        </dt>
        <dd class="col-sm-2">
            @Model.MSRLimitDisplay())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            Limit After Expenses
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.MaxMonthlyPayment())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            Maximum Bank Loan
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.MaxBankLoan())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            LTV
        </dt>
        <dd class="col-sm-2">
            @Model.LTVDisplay()
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            True Max
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.CalculateTrueMax())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            BSD
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.BSD())
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            ABSD (if any)
        </dt>
        <dd class="col-sm-2">
            @Model.DoubleDisplay(Model.ABSD())
        </dd>
    </dl>
</div>
